<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Menu</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/viewmenu.css">
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Food Delivery</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/viewmenu">View Menu</a></li>
                    <li class="nav-item"><a class="nav-link" href="/myorder">My Orders</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Menu Section -->
    <div class="container mt-4">
        <h2 class="text-center mb-4">Our Menu</h2>
        <div class="row">
            {{#each recipes}}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <a href="/recipe/{{this.id}}">
                        <img src="/uploads/{{this.imgname}}" class="card-img-top" alt="{{this.recipiname}}">
                    </a>
                    <div class="card-body text-center">
                        <h5 class="card-title">{{this.recipiname}}</h5>
                        <p class="card-text">Price: ${{this.price}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
