<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Menu Table</title>
    
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/viewmenutable.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" href="#">Admin Panel</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/admin/dashboard">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/addmenu">Add Menu</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/admin/viewmenutable">View Menu Table</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-danger" href="/admin/logout">Logout</a>
                </li>
            </ul>
        </div>
    </div>
</nav>


    <div class="container mt-4">
        <h2 class="text-center">Recipe List</h2>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Recipe Name</th>
                    <th>Price</th>
                    <th>Image Name</th>
                    <th>Image</th>
                    <th>Delete</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
                {{#each recipes}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.recipiname}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.imgname}}</td>
                    <td><img src="/uploads/{{this.imgname}}" width="100"></td>
                    <td>
                        <form action="/admin/deleterecipe/{{this.id}}" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                     <td>
            <a href="/admin/updaterecipe/{{this.id}}" class="btn btn-primary">Update</a>
        </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
